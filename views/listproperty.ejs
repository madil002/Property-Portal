<!doctype html>
<html>

<head>
    <title>List</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
</head>

<body>
    <h1>
        <%=appName%>
    </h1>
    <h3>List a property:</h3>

    <div class="form-container">

        <% if (typeof error !== 'undefined' && error) { %>
            <p class="error-message"><%= error %></p>
        <% } %>
        <% if (typeof success !== 'undefined' && success) { %>
            <p class="success-message"><%= success %></p>
        <% } %>

        <form method="POST" action="/property-added">
            <div class="form-group">

                <label for="price">Price:</label>
                <input type="number" name="price" id="price" min="1" required/>
                
                <label for="street">Street:</label>
                <input type="text" name="street" id="street" required/>

                <label for="city">City:</label>
                <input type="text" name="city" id="city" required/>

                <label for="postcode">Postcode:</label>
                <input type="text" name="postcode" id="postcode" required/>

                <label for="bedrooms">Bedrooms:</label>
                <input type="number" name="bedrooms" id="bedrooms" min="1" required/>

                <label for="bathrooms">Bathrooms:</label>
                <input type="number" name="bathrooms" id="bathrooms" min="1" required/>

                <label for="description">Description:</label>
                <input type="text" name="description" id="description" required/>

                <label for="type">Type:</label>
                <select name="type" id="type">
                    <option value="House">House</option>
                    <option value="Apartment">Apartment</option>
                    <option value="Semi-Detached">Semi-Detached</option>
                    <option value="Detached">Detached</option>
                </select>

            </div>

            <div class="button-container">
                <input type="submit" value="List" class="submit-button" />
                <a href="/" class="back-button">Back</a>
            </div>
        </form>
    </div>
</body>

</html>